<Window x:Class="LanguageSchoolApp.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="ФИО" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <Button Content="Выбрать фото" Click="ChoosePhotoButton_Click" Margin="0,0,0,10"/>
            <Image x:Name="PhotoPreview" Height="100" Width="100" Stretch="UniformToFill" Margin="0,0,0,10" />

            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
