<Window x:Class="LanguageSchoolApp.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить услугу" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#fafafa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 10"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

        <TextBlock Text="Цена:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 10"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 10"/>

        <Button Content="Сохранить" Grid.Row="2" Grid.ColumnSpan="2" Width="100" Height="30" HorizontalAlignment="Center"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
